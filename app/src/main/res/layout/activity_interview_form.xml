<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
   >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/colorPrimaryDark"
            android:gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="@color/white"
                android:text="Interview Form"></TextView>

        </LinearLayout>
        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="20dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textColor="#EE0000"
                    android:layout_marginBottom="10dp"
                    android:text="(*) all fields are mandatory"></TextView>
                <TextView
                    android:id="@+id/tvFullNameTitle"
                    android:textSize="14sp"
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Full Name"></TextView>
                <EditText
                    android:singleLine="true"
                    android:inputType="text"
                    android:imeOptions="actionNext"
                    android:textColor="@color/black"
                    android:paddingLeft="5dp"
                    android:textSize="14sp"
                    android:id="@+id/etFirstName"
                    android:layout_marginTop="2dp"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/lldesign7"></EditText>

                <TextView
                    android:visibility="gone"
                    android:layout_marginTop="16dp"
                    android:textSize="14sp"
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Your Last Name"></TextView>
                <EditText
                    android:visibility="gone"
                    android:singleLine="true"
                    android:inputType="text"
                    android:imeOptions="actionNext"
                    android:textColor="@color/black"
                    android:paddingLeft="5dp"
                    android:textSize="14sp"
                    android:id="@+id/etLastName"
                    android:layout_marginTop="2dp"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/lldesign7"></EditText>

                <TextView
                    android:id="@+id/tvFatherNameTitle"
                    android:layout_marginTop="16dp"
                    android:textSize="14sp"
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Father's Name"></TextView>
                <EditText
                    android:singleLine="true"
                    android:inputType="text"
                    android:imeOptions="actionNext"
                    android:textColor="@color/black"
                    android:paddingLeft="5dp"
                    android:textSize="14sp"
                    android:id="@+id/etFatherName"
                    android:layout_marginTop="2dp"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/lldesign7"></EditText>

                <TextView
                    android:id="@+id/tvDOBTile"
                    android:layout_marginTop="16dp"
                    android:textSize="14sp"
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Date of Birth"></TextView>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="2dp"
                    android:background="@drawable/lldesign7">
                    <ImageView
                        android:id="@+id/imgDOB"
                        android:layout_gravity="center"
                        android:layout_marginLeft="5dp"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/calendericon"></ImageView>
                    <TextView
                        android:id="@+id/tvDOB"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_gravity="center"
                        android:textSize="14sp"
                        android:textColor="@color/black"
                        android:text="dd/mm/yyyy"></TextView>
                </LinearLayout>

                <TextView
                    android:id="@+id/tvIDProofTitle"
                    android:layout_marginTop="16dp"
                    android:textSize="14sp"
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ID Proof"></TextView>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="2dp"
                    android:background="@drawable/lldesign7">
                   <Spinner
                       android:id="@+id/spID"
                       android:layout_width="match_parent"
                       android:layout_height="match_parent"></Spinner>
                </LinearLayout>

                <TextView

                    android:text="Reference Number"
                    android:layout_marginTop="16dp"
                    android:textSize="14sp"
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvRef"></TextView>
                <EditText
                    android:singleLine="true"
                    android:imeOptions="actionNext"
                    android:textColor="@color/black"
                    android:paddingLeft="5dp"
                    android:textSize="14sp"
                    android:id="@+id/etRefNo"
                    android:layout_marginTop="2dp"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/lldesign7"></EditText>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp">
                    <LinearLayout
                        android:id="@+id/lnID"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">
                        <TextView
                            android:textAlignment="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:textColor="@color/black"
                            android:id="@+id/tvIDProof"
                            ></TextView>
                        <LinearLayout
                            android:layout_marginTop="5dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:id="@+id/imgID"
                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                android:src="@drawable/addimage"
                                app:tint="@color/colorPrimaryDark"></ImageView>
                            <ImageView
                                android:layout_marginLeft="10dp"
                                android:id="@+id/imgIDPic"
                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                ></ImageView>
                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:textColor="@color/misscolor"
                        android:text="Note:Please remove your mask before capturing selfie."
                        android:layout_marginBottom="10dp"
                        android:textStyle="bold"></TextView>
                    <TextView
                        android:textAlignment="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:textColor="@color/black"
                        android:text="Upload Your Selfie Image"
                        android:layout_marginBottom="10dp"></TextView>
                    <LinearLayout
                        android:id="@+id/lnSelfieFontFace"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/tvSelfieFontFaceTitle"
                            android:textAlignment="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:textColor="@color/black"
                            android:text="Image 1"
                            ></TextView>
                        <LinearLayout
                            android:layout_marginTop="5dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:id="@+id/imgSelfieFontFace"
                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                android:src="@drawable/addimage"
                                app:tint="@color/colorPrimaryDark"></ImageView>
                            <ImageView
                                android:layout_marginLeft="10dp"
                                android:id="@+id/imgSelfieFontFacePic"
                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                ></ImageView>
                        </LinearLayout>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginTop="10dp"
                        android:id="@+id/lnSelfieRightFace"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/tvSelfieRightFaceUploadTitle"
                            android:textAlignment="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:textColor="@color/black"
                            android:text="Upload Your Selfie Image"
                            ></TextView>
                        <LinearLayout
                            android:layout_marginTop="5dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:id="@+id/imgSelfieRightFace"
                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                android:src="@drawable/addimage"
                                app:tint="@color/colorPrimaryDark"></ImageView>
                            <ImageView
                                android:layout_marginLeft="10dp"
                                android:id="@+id/imgSelfieRightFacePic"
                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                ></ImageView>
                        </LinearLayout>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginTop="10dp"
                        android:id="@+id/lnSelfieLeftFace"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/tvSelfieLeftUploadTitle"
                            android:textAlignment="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:textColor="@color/black"
                            android:text="Upload Your Selfie Image"
                            ></TextView>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp">
                            <ImageView
                                android:id="@+id/imgSelfieLeft"
                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                android:src="@drawable/addimage"
                                app:tint="@color/colorPrimaryDark"></ImageView>
                            <ImageView
                                android:layout_marginLeft="5dp"
                                android:id="@+id/imgSelfieLeftPic"
                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                ></ImageView>
                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

                <Button
                    android:id="@+id/btnSubmit"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/lldesign7"
                    android:backgroundTint="@color/colorPrimaryDark"
                    android:layout_marginTop="20dp"
                    android:textColor="@color/white"
                    android:text="Submit"
                    android:textSize="16sp"
                    android:textAllCaps="false"></Button>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </LinearLayout>

</layout>