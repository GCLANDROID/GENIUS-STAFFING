<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="?android:actionBarSize"
            android:orientation="horizontal"
            android:background="@color/colorPrimary">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                >
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/backimg"
                    android:layout_marginLeft="10dp"
                    android:layout_gravity="center"
                    android:id="@+id/imgBack"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center">
                <TextView
                    android:id="@+id/tvToolBar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/toolbartextsize"
                    android:text="ODOMeter Approval"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:gravity="right">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/homeimg"
                    android:layout_gravity="center"
                    android:layout_marginRight="15dp"
                    android:id="@+id/imgHome"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">
            <LinearLayout
                android:id="@+id/llStrtDate"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center">
                <ImageView
                    android:id="@+id/imgStrtDate"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/calendericon"></ImageView>
                <TextView
                    android:text="Start Date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textColor="@color/maincolor"
                    android:layout_marginLeft="5dp"
                    android:id="@+id/tvStrtDate"></TextView>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/llEndDate"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center">
                <ImageView
                    android:id="@+id/imgEndDate"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/calendericon"></ImageView>
                <TextView
                    android:text="End Date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textColor="@color/maincolor"
                    android:layout_marginLeft="5dp"
                    android:id="@+id/tvEndDate"></TextView>
            </LinearLayout>
        </LinearLayout>
        <Button
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="@drawable/lldesign"
            android:backgroundTint="@color/maincolor"
            android:textColor="@android:color/white"
            android:textSize="13sp"
            android:text="Show"
            android:id="@+id/btnShow"></Button>

        <LinearLayout
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:id="@+id/llLoader"
            android:gravity="center">
            <ProgressBar
                android:layout_width="50dp"
                android:layout_height="50dp"></ProgressBar>
        </LinearLayout>
        <LinearLayout
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/llMain"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:gravity="center"
                android:id="@+id/llReply"
                android:visibility="visible"
                android:layout_marginTop="15dp">

                <Button
                    android:layout_width="70dp"
                    android:layout_height="30dp"
                    android:background="@drawable/lldesign14"
                    android:id="@+id/btnApprove"
                    android:textColor="@android:color/white"
                    android:text="Approve"
                    android:textAppearance="?android:textAppearanceSmall"/>
                <Button
                    android:layout_marginLeft="10dp"
                    android:layout_width="70dp"
                    android:layout_height="30dp"
                    android:background="@drawable/buttondesign2"
                    android:id="@+id/btnReject"
                    android:textColor="@android:color/white"
                    android:text="Reject"
                    android:textAppearance="?android:textAppearanceSmall"/>
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="11sp"
                android:textStyle="bold"
                android:fontFamily="serif"
                android:textColor="@android:color/black"
                android:text="Please Click on Check Box to Approve/Reject Attendance"></TextView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="5dp">
                <LinearLayout
                    android:id="@+id/llClick"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@drawable/lldesign9"
                    android:gravity="center">
                    <LinearLayout
                        android:orientation="vertical"
                        android:id="@+id/llSelect"
                        android:visibility="gone"
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:gravity="center"
                        android:background="@drawable/ovaldesign2"></LinearLayout>
                </LinearLayout>
                <TextView
                    android:textStyle="bold"
                    android:fontFamily="serif"
                    android:layout_marginLeft="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13sp"
                    android:textColor="@android:color/black"
                    android:text="Select All"></TextView>
            </LinearLayout>
            <androidx.recyclerview.widget.RecyclerView
                android:padding="20dp"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/rvItem"></androidx.recyclerview.widget.RecyclerView>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/llNoData"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/search"></ImageView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:text="No data(s) found!"
                android:textColor="@android:color/black"></TextView>
        </LinearLayout>
    </LinearLayout>

</layout>