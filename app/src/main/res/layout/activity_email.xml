<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.EmailActivity"
    android:padding="20dp"
    android:orientation="vertical"
    android:fitsSystemWindows="true">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:text="To"></TextView>
        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:id="@+id/tvTo"></TextView>
    </LinearLayout>
    <View
        android:layout_marginTop="5dp"
        android:background="@color/black"
        android:layout_width="match_parent"
        android:layout_height="1dp"></View>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:text="Subject"></TextView>
        <EditText
            android:padding="10dp"
            android:background="@drawable/lldesign7"
            android:maxLength="50"
            android:hint="Please Enter Message Subject"
            android:textSize="14sp"
            android:textColor="@color/textcolor"
            android:id="@+id/etSubject"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"></EditText>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:text="Body"></TextView>
        <EditText
            android:padding="10dp"
            android:gravity="top"
            android:maxLength="200"
            android:hint="Please Enter Message Body"
            android:textSize="14sp"
            android:textColor="@color/textcolor"
            android:id="@+id/etBody"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@drawable/lldesign7"></EditText>
    </LinearLayout>
    <Button
        android:id="@+id/btnSendMail"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/lldesign11"
        android:backgroundTint="@color/colorAccent"
        android:textColor="@color/white"
        android:text="Send mail"></Button>


</LinearLayout>