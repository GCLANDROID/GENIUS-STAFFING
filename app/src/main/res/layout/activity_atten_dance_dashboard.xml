<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/dlMain"
    tools:context=".activity.attendance.AttenDanceDashboardActivity"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="?android:actionBarSize"
            android:orientation="horizontal"
            android:background="@color/colorPrimary">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/menu"
                    android:id="@+id/imgMenu"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Attendance"

                    android:textSize="@dimen/toolbartextsize"
                    android:textColor="@android:color/white" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:gravity="right">
                <ImageView
                    android:visibility="gone"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:layout_marginRight="15dp"
                    android:src="@drawable/searchicon"
                    android:id="@+id/imgSearch"/>
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:layout_marginRight="15dp"
                    android:src="@drawable/homeimg"
                    android:id="@+id/imgHome"/>
            </LinearLayout>
        </LinearLayout>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout

                    android:visibility="gone"
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <LinearLayout
                        android:weightSum="7"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="@color/blue">
                        <TextView
                            android:gravity="center"
                            android:textColor="@color/white"
                            android:textSize="12sp"
                            android:text="Sun"
                            android:textStyle="bold"
                            android:layout_gravity="center"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"></TextView>
                        <TextView
                            android:gravity="center"
                            android:textColor="@color/white"
                            android:textSize="12sp"
                            android:text="Mon"
                            android:textStyle="bold"
                            android:layout_gravity="center"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"></TextView>
                        <TextView
                            android:gravity="center"
                            android:textColor="@color/white"
                            android:textSize="12sp"
                            android:text="Tue"
                            android:textStyle="bold"
                            android:layout_gravity="center"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"></TextView>
                        <TextView
                            android:gravity="center"
                            android:textColor="@color/white"
                            android:textSize="12sp"
                            android:text="Wed"
                            android:textStyle="bold"
                            android:layout_gravity="center"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"></TextView>
                        <TextView
                            android:gravity="center"
                            android:textColor="@color/white"
                            android:textSize="12sp"
                            android:text="Thu"
                            android:textStyle="bold"
                            android:layout_gravity="center"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"></TextView>
                        <TextView
                            android:gravity="center"
                            android:textColor="@color/white"
                            android:textSize="12sp"
                            android:text="Fri"
                            android:textStyle="bold"
                            android:layout_gravity="center"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"></TextView>
                        <TextView
                            android:gravity="center"
                            android:textColor="@color/white"
                            android:textSize="12sp"
                            android:text="Sat"
                            android:textStyle="bold"
                            android:layout_gravity="center"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"></TextView>
                    </LinearLayout>
                    <LinearLayout
                        android:weightSum="7"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        >
                        <androidx.recyclerview.widget.RecyclerView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:id="@+id/rvSun"></androidx.recyclerview.widget.RecyclerView>
                        <androidx.recyclerview.widget.RecyclerView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:id="@+id/rvMon"></androidx.recyclerview.widget.RecyclerView>
                        <androidx.recyclerview.widget.RecyclerView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:id="@+id/rvTue"></androidx.recyclerview.widget.RecyclerView>
                        <androidx.recyclerview.widget.RecyclerView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:id="@+id/rvWed"></androidx.recyclerview.widget.RecyclerView>
                        <androidx.recyclerview.widget.RecyclerView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:id="@+id/rvThu"></androidx.recyclerview.widget.RecyclerView>
                        <androidx.recyclerview.widget.RecyclerView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:id="@+id/rvFri"></androidx.recyclerview.widget.RecyclerView>
                        <androidx.recyclerview.widget.RecyclerView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:id="@+id/rvSat"
                           ></androidx.recyclerview.widget.RecyclerView>


                    </LinearLayout>
                </LinearLayout>


                <androidx.recyclerview.widget.RecyclerView

                    android:visibility="gone"
                    android:layout_marginTop="20dp"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/rvItem"></androidx.recyclerview.widget.RecyclerView>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/blue">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.3"
                        android:gravity="bottom|center"
                        android:layout_marginLeft="16dp">
                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/attcalendar"></ImageView>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="bottom|right"
                        android:padding="5dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="16sp"
                            android:textColor="@color/white"
                            android:text="Present"></TextView>
                        <TextView
                            android:textStyle="bold"
                            android:layout_marginLeft="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="30sp"
                            android:textColor="@color/white"
                            android:id="@+id/tvPresent"></TextView>
                        <TextView
                            android:layout_marginLeft="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="16sp"
                            android:textColor="@color/white"
                            android:text="Days"></TextView>
                    </LinearLayout>
                </LinearLayout>
                <org.naishadhparmar.zcustomcalendar.CustomCalendar
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/custom_calendar"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent">


                </org.naishadhparmar.zcustomcalendar.CustomCalendar>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                   >
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <androidx.cardview.widget.CardView
                            android:layout_width="12dp"
                            android:layout_height="12dp"
                            android:layout_margin="4dp"
                            app:cardCornerRadius="4dp"
                            app:cardBackgroundColor="@color/green"
                            android:layout_gravity="center">



                        </androidx.cardview.widget.CardView>
                    </LinearLayout>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="10sp"
                        android:textColor="@color/grey"
                        android:layout_gravity="center"
                        android:layout_marginLeft="5dp"
                        android:text="Present"></TextView>

                    <LinearLayout
                        android:layout_marginLeft="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <androidx.cardview.widget.CardView
                            android:layout_width="12dp"
                            android:layout_height="12dp"
                            android:layout_margin="4dp"
                            app:cardCornerRadius="4dp"
                            app:cardBackgroundColor="@color/misscolor"
                            android:layout_gravity="center">



                        </androidx.cardview.widget.CardView>
                    </LinearLayout>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="10sp"
                        android:textColor="@color/grey"
                        android:layout_gravity="center"
                        android:layout_marginLeft="5dp"
                        android:text="Absent"></TextView>


                    <LinearLayout
                        android:layout_marginLeft="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <androidx.cardview.widget.CardView
                            android:layout_width="12dp"
                            android:layout_height="12dp"
                            android:layout_margin="4dp"
                            app:cardCornerRadius="4dp"
                            app:cardBackgroundColor="@color/half_day"
                            android:layout_gravity="center">



                        </androidx.cardview.widget.CardView>
                    </LinearLayout>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="10sp"
                        android:textColor="@color/grey"
                        android:layout_gravity="center"
                        android:layout_marginLeft="5dp"
                        android:text="Half Day"></TextView>

                    <LinearLayout
                        android:layout_marginLeft="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <androidx.cardview.widget.CardView
                            android:layout_width="12dp"
                            android:layout_height="12dp"
                            android:layout_margin="4dp"
                            app:cardCornerRadius="4dp"
                            app:cardBackgroundColor="@color/blue"
                            android:layout_gravity="center">



                        </androidx.cardview.widget.CardView>
                    </LinearLayout>
                    <TextView
                        android:layout_marginRight="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="10sp"
                        android:textColor="@color/grey"
                        android:layout_gravity="center"
                        android:layout_marginLeft="5dp"
                        android:text="Weekly Off"></TextView>
                    <LinearLayout
                        android:layout_marginLeft="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <androidx.cardview.widget.CardView
                            android:layout_width="12dp"
                            android:layout_height="12dp"
                            android:layout_margin="4dp"
                            app:cardCornerRadius="4dp"
                            app:cardBackgroundColor="@color/nessecarycolor"
                            android:layout_gravity="center">



                        </androidx.cardview.widget.CardView>
                    </LinearLayout>
                    <TextView
                        android:layout_marginRight="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="10sp"
                        android:textColor="@color/grey"
                        android:layout_gravity="center"
                        android:layout_marginLeft="5dp"
                        android:text="Holiday"></TextView>



                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <androidx.cardview.widget.CardView
                            android:layout_width="12dp"
                            android:layout_height="12dp"
                            android:layout_margin="4dp"
                            app:cardCornerRadius="4dp"
                            app:cardBackgroundColor="@color/optional_holiday"
                            android:layout_gravity="center">

                        </androidx.cardview.widget.CardView>
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="10sp"
                        android:textColor="@color/grey"
                        android:layout_gravity="center"
                        android:layout_marginLeft="5dp"
                        android:text="Optional Holiday"></TextView>

                    <LinearLayout
                        android:layout_marginStart="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <androidx.cardview.widget.CardView
                            android:layout_width="12dp"
                            android:layout_height="12dp"
                            android:layout_margin="4dp"
                            app:cardCornerRadius="4dp"
                            app:cardBackgroundColor="@color/contactcolor"
                            android:layout_gravity="center">



                        </androidx.cardview.widget.CardView>
                    </LinearLayout>

                    <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="10sp"
                    android:textColor="@color/grey"
                    android:layout_gravity="center"
                    android:layout_marginLeft="5dp"
                    android:text="Leave"></TextView>




                    <LinearLayout
                        android:layout_marginStart="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <androidx.cardview.widget.CardView
                            android:layout_width="12dp"
                            android:layout_height="12dp"
                            android:layout_margin="4dp"
                            app:cardCornerRadius="4dp"
                            app:cardBackgroundColor="@color/purple"
                            android:layout_gravity="center">



                        </androidx.cardview.widget.CardView>
                    </LinearLayout>
                    <TextView
                        android:layout_marginRight="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="10sp"
                        android:textColor="@color/grey"
                        android:layout_gravity="center"
                        android:layout_marginLeft="5dp"
                        android:text="Half Day Leave"></TextView>


                    <LinearLayout
                        android:layout_marginStart="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <androidx.cardview.widget.CardView
                            android:layout_width="12dp"
                            android:layout_height="12dp"
                            android:layout_margin="4dp"
                            app:cardCornerRadius="4dp"
                            app:cardBackgroundColor="@color/holiday_work"
                            android:layout_gravity="center">

                        </androidx.cardview.widget.CardView>
                    </LinearLayout>
                    <TextView
                        android:layout_marginRight="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="10sp"
                        android:textColor="@color/grey"
                        android:layout_gravity="center"
                        android:layout_marginLeft="5dp"
                        android:text="Holiday Work"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <androidx.cardview.widget.CardView
                            android:layout_width="12dp"
                            android:layout_height="12dp"
                            android:layout_margin="4dp"
                            app:cardCornerRadius="4dp"
                            app:cardBackgroundColor="@color/weekly_comp_off"
                            android:layout_gravity="center">

                        </androidx.cardview.widget.CardView>
                    </LinearLayout>
                    <TextView
                        android:layout_marginRight="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="10sp"
                        android:textColor="@color/grey"
                        android:layout_gravity="center"
                        android:layout_marginLeft="5dp"
                        android:text="Weekly Comp Off"/>
                </LinearLayout>




                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp">
                    <TextView
                        android:layout_marginRight="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="10sp"
                        android:textColor="@color/designcolor1"
                        android:layout_gravity="center"
                        android:layout_marginLeft="5dp"
                        android:text="Note : Please click on the date for more details"></TextView>

                </LinearLayout>

                <LinearLayout
                    android:layout_marginRight="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:padding="10dp">
                    <Button
                        android:id="@+id/btnMarkAttendance"
                        android:textSize="14sp"
                        android:textColor="@color/white"
                        android:text="Mark Attendance"
                        android:background="@drawable/lldesign"
                        android:backgroundTint="@color/maincolor"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_weight="1"></Button>
                    <Button
                        android:layout_marginLeft="10dp"
                        android:id="@+id/btnLeave"
                        android:textSize="14sp"
                        android:textColor="@color/maincolor"
                        android:text="Apply for Leave"
                        android:background="@drawable/lldesign7"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_weight="1"></Button>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="bottom">

                <LinearLayout
                    android:id="@+id/lnStatus"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@color/white"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/tvDetails"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="1"
                        android:textColor="@color/white"
                        android:textSize="14sp"></TextView>

                    <TextView
                        android:id="@+id/tvOK"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_weight="0.1"
                        android:text="OK"
                        android:textColor="@color/white"
                        android:textSize="14sp"></TextView>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="bottom|right">

                <LinearLayout
                    android:visibility="gone"
                    android:id="@+id/llBottom"
                    android:padding="5dp"
                    android:background="@drawable/lldesign"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <LinearLayout
                        android:id="@+id/llAttenRegularize"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/backdate_attendance"
                           ></ImageView>
                        <TextView
                            android:layout_gravity="center"
                            android:textColor="@color/textcolor"
                            android:layout_marginLeft="5dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:text="Regularize your Attendance"></TextView>
                    </LinearLayout>
                    <TextView
                        android:id="@+id/tvCancel"
                        android:textStyle="bold"
                        android:gravity="right"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:layout_marginTop="5dp"
                        android:textColor="@color/textcolor"
                        android:text="CLOSE"></TextView>
                </LinearLayout>
            </LinearLayout>
        </FrameLayout>

    </LinearLayout>
    <include
        android:layout_marginRight="10dp"
        android:layout_marginBottom="5dp"
        android:id="@+id/llDrawerPane"
        layout="@layout/attendance_drawer_layout"
        android:layout_width="290dp"
        android:layout_height="match_parent"
        android:layout_gravity="left"
        android:fitsSystemWindows="false"
        android:focusableInTouchMode="false" />

</androidx.drawerlayout.widget.DrawerLayout>