<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:fitsSystemWindows="true">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/colorPrimaryDark"
            android:gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="@color/white"
                android:text="Interviewer Form"></TextView>

        </LinearLayout>
        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="20dp">
                <TextView
                    android:text="Candidate's ID Proof Number"
                    android:layout_marginTop="16dp"
                    android:textSize="14sp"
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvRef"></TextView>
                <EditText
                    android:singleLine="true"
                    android:imeOptions="actionNext"
                    android:textColor="@color/black"
                    android:paddingLeft="5dp"
                    android:textSize="14sp"
                    android:id="@+id/etRefNo"
                    android:layout_marginTop="2dp"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/lldesign7"></EditText>

                <Button
                    android:id="@+id/btnGetData"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:backgroundTint="@color/colorPrimaryDark"
                    android:background="@drawable/lldesign7"
                    android:layout_marginTop="20dp"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:text="Get Candidate Data"
                    android:textAllCaps="false"></Button>
                <LinearLayout
                    android:visibility="gone"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="20dp"
                    android:id="@+id/lnData">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:textColor="#EE0000"
                        android:layout_marginBottom="10dp"
                        android:text="(*) all fileds are mandatory"></TextView>
                    <TextView
                        android:textSize="14sp"
                        android:textColor="@color/black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Full Name"></TextView>
                    <EditText
                        android:enabled="false"
                        android:singleLine="true"
                        android:inputType="text"
                        android:imeOptions="actionNext"
                        android:textColor="@color/black"
                        android:paddingLeft="5dp"
                        android:textSize="14sp"
                        android:id="@+id/etFirstName"
                        android:text="Arpan Saha"
                        android:layout_marginTop="2dp"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="@drawable/lldesign7"></EditText>
                    <TextView
                        android:layout_marginTop="20dp"
                        android:textSize="14sp"
                        android:textColor="@color/black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Father Name"></TextView>
                    <EditText
                        android:enabled="false"
                        android:singleLine="true"
                        android:inputType="text"
                        android:imeOptions="actionNext"
                        android:textColor="@color/black"
                        android:paddingLeft="5dp"
                        android:textSize="14sp"
                        android:id="@+id/etFatherName"
                        android:text="Aloke Saha"
                        android:layout_marginTop="2dp"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="@drawable/lldesign7"></EditText>
                    <TextView
                        android:layout_marginTop="20dp"
                        android:textSize="14sp"
                        android:textColor="@color/black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Date Of Birth"></TextView>
                    <EditText
                        android:enabled="false"
                        android:singleLine="true"
                        android:inputType="text"
                        android:imeOptions="actionNext"
                        android:textColor="@color/black"
                        android:paddingLeft="5dp"
                        android:textSize="14sp"
                        android:id="@+id/etDOB"
                        android:text="29 Oct 1994"
                        android:layout_marginTop="2dp"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="@drawable/lldesign7"></EditText>
                    <TextView
                        android:layout_marginTop="20dp"
                        android:textSize="14sp"
                        android:textColor="@color/black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Provided ID Proof"></TextView>
                    <EditText
                        android:enabled="false"
                        android:singleLine="true"
                        android:inputType="text"
                        android:imeOptions="actionNext"
                        android:textColor="@color/black"
                        android:paddingLeft="5dp"
                        android:textSize="14sp"
                        android:id="@+id/etIDProof"
                        android:layout_marginTop="2dp"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="@drawable/lldesign7"></EditText>
                    <TextView
                        android:layout_marginTop="20dp"
                        android:textSize="14sp"
                        android:textColor="@color/black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ID Proof Number"></TextView>
                    <EditText
                        android:enabled="false"
                        android:singleLine="true"
                        android:inputType="text"
                        android:imeOptions="actionNext"
                        android:textColor="@color/black"
                        android:paddingLeft="5dp"
                        android:textSize="14sp"
                        android:id="@+id/etIDProofNo"
                        android:text="2039 4248 5127"
                        android:layout_marginTop="2dp"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="@drawable/lldesign7"></EditText>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp">
                        <LinearLayout
                            android:id="@+id/lnID"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">
                            <TextView
                                android:textAlignment="center"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="14sp"
                                android:textColor="@color/black"
                                android:text="ID Proof \nImage"
                                ></TextView>
                            <ImageView
                                android:id="@+id/imgID"
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:layout_marginTop="5dp"></ImageView>
                        </LinearLayout>
                        <LinearLayout

                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp">
                        <LinearLayout

                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">
                            <TextView
                                android:textAlignment="center"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="14sp"
                                android:textColor="@color/black"
                                android:text="Candidate's Image"
                                ></TextView>
                            <ImageView
                                android:id="@+id/imgCanImage"
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:layout_marginTop="5dp"></ImageView>
                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/lnSelfie"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">
                            <TextView
                                android:id="@+id/tvCanFace"
                                android:textAlignment="center"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="14sp"
                                android:textColor="@color/black"
                                android:text="Upload Candidate's \nFace Image"
                                ></TextView>
                            <ImageView
                                android:id="@+id/imgSelfie"
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:src="@drawable/addimage"
                                android:layout_marginTop="5dp"></ImageView>
                        </LinearLayout>
                    </LinearLayout>
                    <Button
                        android:id="@+id/btnVerify"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:backgroundTint="@color/colorPrimaryDark"
                        android:background="@drawable/lldesign7"
                        android:layout_marginTop="20dp"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        android:text="Verify"
                        android:textAllCaps="false"></Button>

                </LinearLayout>

            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </LinearLayout>

</layout>