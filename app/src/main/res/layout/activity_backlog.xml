<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.BackDatedAttendanceActivity"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="@color/colorPrimary"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5">

            <ImageView
                android:id="@+id/imgBack"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:src="@drawable/backimg" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <TextView
                android:id="@+id/tvToolBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Backlog Attendance"
                android:textAllCaps="true"
                android:textAppearance="?android:textAppearanceSmall"
                android:textColor="@android:color/white"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:gravity="right">

            <ImageView
                android:id="@+id/imgHome"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_marginRight="15dp"
                android:src="@drawable/homeimg" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/lnStartDate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <ImageView
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:src="@drawable/calendar"
                    app:tint="@color/maincolor"></ImageView>
                <TextView
                    android:textAlignment="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textColor="@color/textcolor"
                    android:layout_gravity="center"
                    android:layout_marginLeft="5dp"
                    android:id="@+id/tvStrtDate"
                    android:text="Please select your Start Date"></TextView>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/lnEndDate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <ImageView
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:src="@drawable/calendar"
                    app:tint="@color/maincolor"></ImageView>
                <TextView
                    android:textAlignment="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textColor="@color/textcolor"
                    android:layout_gravity="center"
                    android:layout_marginLeft="5dp"
                    android:id="@+id/tvEndDate"
                    android:text="Please select your End Date"></TextView>
            </LinearLayout>
        </LinearLayout>
        <Button
            android:id="@+id/btnShow"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:background="@drawable/lldesign"
            android:backgroundTint="@color/maincolor"
            android:layout_marginTop="10dp"
            android:text="show"
            android:textColor="@color/white"></Button>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:id="@+id/llLoader"
        android:gravity="center"
        android:orientation="vertical">
        <ProgressBar

            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/ProgressbarWL"
            />
        <TextView
            android:layout_marginTop="5dp"
            android:textAlignment="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="italic"
            android:textSize="13sp"
            android:textColor="@android:color/darker_gray"
            android:text="“In most cases, being a good boss means hiring talented people and then getting out of their way.”-Tina Fey"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:orientation="vertical"
        android:id="@+id/llMain"
        android:visibility="gone">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textColor="@android:color/holo_red_dark"
                    android:text="*Note -1:You can change your In Time/Out Time."></TextView>
                <TextView
                    android:layout_marginTop="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textColor="@android:color/holo_red_dark"
                    android:text="*Note -2:Please Untick the Date if you are actually Absent"></TextView>
                <TextView
                    android:textStyle="bold"
                    android:layout_marginTop="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textColor="@color/textcolor"
                    android:id="@+id/tvCount"></TextView>
                <LinearLayout
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="5dp">
                    <LinearLayout

                        android:id="@+id/llTick"
                        android:gravity="center"
                        android:background="@drawable/lldesign"
                        android:layout_gravity="center"
                        android:backgroundTint="@color/grey"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                       >
                        <ImageView
                            android:visibility="gone"
                            android:id="@+id/imgLike"
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:src="@drawable/likeicon"
                            app:tint="@color/white"></ImageView>
                    </LinearLayout>
                    <TextView
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:textColor="@color/textcolor"
                        android:layout_gravity="center"
                        android:text="Select All"
                        android:layout_marginLeft="5dp"></TextView>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/llHeading"
                    android:visibility="visible"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="15sp"
                    android:background="@drawable/lldesign7"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:visibility="gone"
                        android:orientation="vertical"
                        android:id="@+id/llLike"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:layout_width="0dp"
                        android:layout_height="20dp"
                        android:layout_weight="0.1">

                    </LinearLayout>
                    <TextView
                        android:gravity="center"
                        android:id="@+id/tvDate"
                        android:layout_marginLeft="2dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Date"
                        android:layout_weight="0.5"
                        android:layout_gravity="center"
                        android:textColor="@android:color/black"
                        android:textSize="12sp"/>
                    <TextView
                        android:gravity="center"
                        android:id="@+id/tvInTime"
                        android:layout_marginLeft="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="In time"
                        android:layout_weight="0.5"
                        android:layout_gravity="center"
                        android:textColor="@android:color/black"
                        android:textSize="12sp"/>
                    <TextView
                        android:gravity="center"
                        android:id="@+id/tvOutTime"
                        android:layout_marginLeft="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Out time"
                        android:layout_weight="0.5"
                        android:layout_gravity="center"
                        android:textColor="@android:color/black"
                        android:textSize="12sp"/>
                    <TextView
                        android:gravity="right"
                        android:id="@+id/tvRemark"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Daytype"
                        android:layout_weight="0.2"
                        android:layout_gravity="center"
                        android:textColor="@android:color/black"
                        android:textSize="12sp"/>
                </LinearLayout>
                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/rvItem"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp">

                </androidx.recyclerview.widget.RecyclerView>
                <EditText
                    android:background="@null"
                    android:id="@+id/etFocus"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"></EditText>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:gravity="right"
                    android:paddingRight="10dp">
                    <LinearLayout

                        android:id="@+id/btnSubmit"
                        android:layout_width="120dp"
                        android:layout_height="40dp"
                        android:background="@drawable/lldesign"
                        android:orientation="horizontal"
                         android:backgroundTint="@color/maincolor"

                        >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center">
                            <TextView
                                android:layout_gravity="center"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="14sp"
                                android:textColor="@android:color/white"
                                android:text="SAVE"></TextView>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>



    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="top|center"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        android:visibility="gone"
        android:id="@+id/llNodata">
        <ImageView
            android:layout_marginTop="20dp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/problemicon"/>
        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No data found"
            android:textStyle="bold"
            android:textAppearance="?android:textAppearanceMedium"
            android:textColor="@android:color/black"/>
    </LinearLayout>

</LinearLayout>