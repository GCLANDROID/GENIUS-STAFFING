<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="20dp"
    android:padding="10dp"
    android:background="@drawable/lldesign7">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.3"
            android:gravity="top|center">
            <ImageView

                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/profileuser"></ImageView>
        </LinearLayout>
        <LinearLayout
            android:layout_marginLeft="10dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tvSpokePerson"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="@color/textcolor"
                android:text="Arpan Saha"></TextView>
            <TextView
                android:layout_marginTop="5dp"
                android:id="@+id/tvBranch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="@color/doccolor"
                android:text="Kolkata"></TextView>
        </LinearLayout>
        <LinearLayout
            android:gravity="right"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.4"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/imgEmail"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:src="@drawable/gmail"></ImageView>
            <ImageView
                android:id="@+id/imgCall"
                android:layout_marginLeft="10dp"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:src="@drawable/phonecall"></ImageView>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>