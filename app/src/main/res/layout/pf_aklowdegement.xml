<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="320dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center">

        <LinearLayout

            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"

            android:background="@drawable/lldesign">
            <LinearLayout
                android:layout_width="320dp"
                android:layout_height="34dp"
                android:paddingRight="10dp"
                android:background="@color/maincolor">

            </LinearLayout>
            <TextView
                android:padding="10dp"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="@color/textcolor"
                android:text="“I have Read and Understood the Genius PF trust Surrender transition formalities to EPFO and unavailability of Advance/Withdrawal/Transfer-In/ Transferout process till 31st July 2023 and acknowledge the same”"/>

            <TextView
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:gravity="center"
                android:background="@drawable/lldesign7"
                android:backgroundTint="@color/colorPrimaryDark"
                android:id="@+id/tvAcknowledge"
                android:padding="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:text="acknowledge"
                android:textAllCaps="true"/>

        </LinearLayout>




</LinearLayout>
