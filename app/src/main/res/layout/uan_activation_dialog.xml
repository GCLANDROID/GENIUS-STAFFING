<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginHorizontal="20dp"
    android:layout_marginVertical="20dp"
    android:background="@android:color/white"
    android:orientation="vertical">

   <ImageView
       android:id="@+id/imgModal"
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:scaleType="fitXY"
       android:src="@mipmap/uan_2"
       app:layout_constraintBottom_toBottomOf="parent"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toTopOf="parent" />

   <ImageView
       android:id="@+id/imgCancel"
       android:layout_width="20dp"
       android:layout_height="20dp"
       android:layout_marginTop="10dp"
       android:layout_marginEnd="15dp"
       android:src="@drawable/cancelicon"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintTop_toTopOf="parent"
       app:tint="@color/white" />

   <LinearLayout
       android:id="@+id/llButtonLayout"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:orientation="vertical"
       android:layout_marginBottom="20dp"
       android:layout_marginEnd="15dp"
       android:gravity="center"
       app:layout_constraintBottom_toBottomOf="parent"
       app:layout_constraintEnd_toEndOf="parent">

      <Button
          android:id="@+id/btnUanActivation"
          android:layout_width="wrap_content"
          android:layout_height="40dp"
          android:text="Click here to UAN Activation"
          android:textAllCaps="false"
          android:paddingHorizontal="20dp"
          android:background="@drawable/button_background"
          android:backgroundTint="#1FCAB7"
          android:textStyle="bold"/>

      <TextView
          android:id="@+id/txtUanBen"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text=">> View UAN Activation Benefits"
          android:textColor="@color/black"
          android:textStyle="bold"
          android:layout_marginTop="15dp"
          android:background="@drawable/background"
          android:paddingHorizontal="10dp"
          android:paddingTop="2dp"
          android:paddingBottom="3dp"
          android:textSize="13sp"/>
   </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>
