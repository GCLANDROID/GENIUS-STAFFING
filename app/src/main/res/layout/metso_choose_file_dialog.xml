<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="330dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:background="@android:color/white">
    <LinearLayout
        android:layout_width="330dp"
        android:layout_height="40dp"
        android:background="@color/dcolor"
        android:gravity="center">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:text="Choose File"></TextView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="20dp">
        <LinearLayout
            android:id="@+id/llCameraSelect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imgCamera"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/camera"
                app:tint="#6aaa45"
                android:padding="5dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Camera"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/llDocumentSelect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="80dp"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:visibility="visible"
                android:id="@+id/imgPDF"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/files"
                app:tint="#6aaa45"
                android:padding="5dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Document"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:layout_width="330dp"
        android:layout_height="40dp"
        android:gravity="right">
        <Button
            android:id="@+id/btnCancel"
            android:layout_marginRight="10dp"
            android:layout_width="80dp"
            android:layout_height="35dp"
            android:background="@drawable/lldesign"
            android:backgroundTint="@color/grey"
            android:text="CANCEL"
            android:textColor="@color/white"/>
    </LinearLayout>
</LinearLayout>
