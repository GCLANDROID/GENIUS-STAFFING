<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="5dp"
        android:layout_marginHorizontal="10dp"
        app:cardCornerRadius="5dp"
        android:elevation="7dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingHorizontal="15dp"
            android:focusedByDefault="true"
            android:paddingTop="10dp">
            <TextView
                android:id="@+id/txtReceivingDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:text="Receive Date"
                android:textColor="#33A1F8"
                android:textSize="13sp"
                android:visibility="gone"
                android:textStyle="bold"/>
            <!--<androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Product Name"
                    android:textColor="@color/colorPrimary"
                    android:textSize="12sp" />



            </androidx.constraintlayout.widget.ConstraintLayout>-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Product Name"
                android:textSize="12sp"
                android:textColor="@color/colorPrimary"/>
            <TextView
                android:id="@+id/txtProductName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Product Name"
                android:textColor="@color/black"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_marginEnd="5dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Stock in hand"
                        android:textSize="12sp"
                        android:textColor="@color/colorPrimary"/>
                    <EditText
                        android:id="@+id/txtStockInHand"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_marginTop="5dp"
                        android:enabled="false"
                        android:textSize="14sp"
                        android:paddingHorizontal="10dp"
                        android:background="@drawable/lldesign"
                        android:backgroundTint="@color/bar1"
                        android:textColor="@color/black"/>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_marginStart="5dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Receiving Stock"
                        android:textSize="12sp"
                        android:textColor="@color/colorPrimary"/>
                    <EditText
                        android:id="@+id/txtReceivingStock"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_marginTop="5dp"
                        android:inputType="number"
                        android:textSize="14sp"
                        android:imeOptions="actionNext"
                        android:paddingHorizontal="10dp"
                        android:background="@drawable/lldesign"
                        android:backgroundTint="@color/bar1"
                        android:textColor="@color/black"/>


                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_marginEnd="5dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sales Done"
                        android:textSize="12sp"
                        android:textColor="@color/colorPrimary"/>

                    <EditText
                        android:id="@+id/txtSalesDone"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/lldesign"
                        android:backgroundTint="@color/bar1"
                        android:inputType="number"
                        android:imeOptions="actionNext"
                        android:textSize="14sp"
                        android:paddingHorizontal="10dp"
                        android:textColor="@color/black" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_marginStart="5dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sales Values"
                        android:textSize="12sp"
                        android:textColor="@color/colorPrimary"/>
                    <EditText
                        android:id="@+id/txtSalesValues"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_marginTop="5dp"
                        android:inputType="number"
                        android:textSize="14sp"
                        android:enabled="false"

                        android:editable="false"
                        android:paddingHorizontal="10dp"
                        android:background="@drawable/lldesign"
                        android:backgroundTint="@color/bar1"
                        android:textColor="@color/black"/>


                </LinearLayout>
            </LinearLayout>
            <TextView
                android:id="@+id/txtError"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="#F44336"
                android:layout_marginTop="5dp"
                android:text="Sales Done value should be less then Closing Stock."
                android:visibility="gone"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="17dp">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_marginEnd="5dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Closing Stock"
                        android:textSize="12sp"
                        android:textColor="@color/colorPrimary"/>
                    <EditText
                        android:id="@+id/txtClosingStock"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_marginTop="5dp"
                        android:inputType="number"
                        android:textSize="14sp"
                        android:imeOptions="actionDone"
                        android:paddingHorizontal="10dp"
                        android:background="@drawable/lldesign"
                        android:backgroundTint="@color/bar1"
                        android:textColor="@color/black"/>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:visibility="invisible"
                    android:layout_marginStart="5dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Stock in hand"
                        android:textSize="12sp"
                        android:textColor="@color/colorPrimary"/>
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/lldesign"
                        android:backgroundTint="@color/bar1"
                        android:textColor="@color/black"/>


                </LinearLayout>
            </LinearLayout>
        </LinearLayout>





    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>