<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/lldesign9"
        android:padding="10dp">
        <LinearLayout
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/lldesign9"
            android:gravity="center">
            <ImageView
                android:id="@+id/imgDoc"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/youtube"></ImageView>
        </LinearLayout>
        <TextView
            android:id="@+id/tvPFDoc"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:text="PF Manual"
            android:textSize="16sp"
            android:textColor="@color/textcolor"></TextView>
        <TextView
            android:id="@+id/tvViewDocument"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="View Document"
            android:layout_gravity="center"
            android:textSize="12sp"
            android:background="@drawable/lldesign9"
            android:backgroundTint="@color/color1"></TextView>
    </LinearLayout>

</LinearLayout>