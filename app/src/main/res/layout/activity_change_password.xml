<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.ChangePasswordActivity"
    android:orientation="vertical"
    android:fitsSystemWindows="true">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="?android:actionBarSize"
        android:orientation="horizontal"
        android:background="@color/colorPrimary">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            >
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/backimg"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center"
                android:id="@+id/imgBack"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:textSize="@dimen/toolbartextsize"
                android:text="Change Password"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:gravity="right">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/homeimg"
                android:layout_gravity="center"
                android:layout_marginRight="15dp"
                android:id="@+id/imgHome"/>
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:textStyle="bold"
        android:fontFamily="sans-serif-light"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Note: \n1.Please Change Your Default Password after First Login."
        android:textSize="11sp"
        android:textColor="@color/misscolor" />
    <LinearLayout
        android:orientation="vertical"
        android:layout_marginTop="15dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:id="@+id/tvOldPassword"
            android:textSize="11sp"
            android:textColor="@color/colorPrimaryDark" />
        <EditText
            android:inputType="textPassword"
            android:id="@+id/etOldPassword"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/lldesign9"
            android:layout_marginTop="10dp"
            android:textSize="12sp"
            android:textColor="@color/colorPrimaryDark"
            android:paddingLeft="10dp"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_marginTop="15dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView

            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:id="@+id/tvNewPassword"
            android:textSize="11sp"
            android:textColor="@color/colorPrimaryDark" />
        <EditText
            android:inputType="textPassword"
            android:id="@+id/etNewPassword"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/lldesign9"
            android:layout_marginTop="10dp"
            android:textSize="12sp"
            android:textColor="@color/colorPrimaryDark"
            android:paddingLeft="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Password Policy"
            android:layout_marginTop="5dp"
            android:fontFamily="sans-serif-medium"
            android:textColor="@color/black"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tvTickCross1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-medium"
                android:text="@string/cross_text"
                android:textColor="@color/misscolor"/>

            <TextView
                android:id="@+id/tvPasswordLength"
                android:layout_width="wrap_content"
                android:layout_height="19dp"
                android:layout_marginStart="3dp"
                android:fontFamily="sans-serif-medium"
                android:text="Password Length 6-12 Characters"
                android:textColor="@color/misscolor"
                android:textSize="13sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tvTickCross2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-medium"
                android:text="@string/cross_text"
                android:textColor="@color/misscolor"/>
            <TextView
                android:id="@+id/tvUpperCase"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-medium"
                android:layout_marginStart="3dp"
                android:text="At Least 1 Upper Case"
                android:textSize="13sp"
                android:textColor="@color/misscolor"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tvTickCross3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-medium"
                android:text="@string/cross_text"
                android:textColor="@color/misscolor"/>
            <TextView
                android:id="@+id/tvLowerCase"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-medium"
                android:layout_marginStart="3dp"
                android:text="At Least 1 Lower Case"
                android:textSize="13sp"
                android:textColor="@color/misscolor"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tvTickCross4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-medium"
                android:text="@string/cross_text"
                android:textColor="@color/misscolor"/>
            <TextView
                android:id="@+id/tvCheckNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-medium"
                android:layout_marginStart="3dp"
                android:text="At Least 1 Number"
                android:textSize="13sp"
                android:textColor="@color/misscolor"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tvTickCross5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-medium"
                android:text="@string/cross_text"
                android:textColor="@color/misscolor"/>
            <TextView
                android:id="@+id/tvSpecialCharacter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-medium"
                android:layout_marginStart="3dp"
                android:textColor="@color/misscolor"
                android:textSize="13sp"
                android:text="At Least 1 Special Character (!,@,#,$,%,(,))" />
        </LinearLayout>




    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_marginTop="15dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:id="@+id/tvConfirmPassword"
            android:textSize="11sp"
            android:textColor="@color/colorPrimaryDark" />
        <EditText
            android:inputType="textPassword"
            android:id="@+id/etConfirmPassword"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/lldesign9"
            android:layout_marginTop="10dp"
            android:textSize="12sp"
            android:textColor="@color/colorPrimaryDark"
            android:paddingLeft="10dp"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <Button
            android:textAllCaps="false"
            android:id="@+id/btnUpdate"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:background="@color/colorPrimaryDark"
            android:text="Update"
            android:textColor="@android:color/white"
            android:textSize="12sp"/>
        <Button
            android:textAllCaps="false"
            android:id="@+id/btnCancel"
            android:layout_marginLeft="10dp"
            android:textColor="@android:color/white"
            android:text="Cancel"
            android:textSize="12sp"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:background="@color/barcolor"/>
    </LinearLayout>
</LinearLayout>