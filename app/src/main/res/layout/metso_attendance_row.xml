<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginBottom="10dp">

    <LinearLayout
        android:id="@+id/llHeading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="15sp"
        android:layout_marginRight="5dp"
        android:orientation="horizontal">
        <LinearLayout
            android:visibility="visible"
            android:id="@+id/llLike"
            android:gravity="center"
            android:background="@drawable/lldesign"
            android:layout_gravity="center"
            android:backgroundTint="@color/grey"
            android:layout_width="0dp"
            android:layout_height="20dp"

            android:layout_weight="0.1">
            <ImageView
                android:visibility="gone"
                android:id="@+id/imgLike"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/likeicon"
                app:tint="@color/white"></ImageView>
        </LinearLayout>

        <TextView
            android:id="@+id/tvDate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:layout_gravity="center"
            android:text="02/09/2020"
            android:layout_marginStart="5dp"
            android:textColor="@android:color/black"
            android:textSize="12sp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvInTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                android:gravity="center"
                android:text="--:--"
                android:textColor="@android:color/black"
                android:textSize="12sp" />

            <ImageView
                android:id="@+id/imgInTime"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                app:tint="#4CAF50"
                android:visibility="gone"
                android:src="@drawable/clock" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvOutTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                android:gravity="center"
                android:text="--:--"
                android:textColor="@android:color/black"
                android:textSize="12sp" />

            <ImageView
                android:id="@+id/imgOutTime"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                app:tint="#FF0000"
                android:visibility="gone"
                android:src="@drawable/clock" />
        </LinearLayout>

        <!--<TextView
            android:id="@+id/tvShift"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_weight="0.2"
            android:gravity="left|center"
            android:lines="3"
            android:text="Select"
            android:textColor="@android:color/black"
            android:textSize="10sp"
            android:drawableEnd="@drawable/ic_arrow_drop_down_24"/>-->
    </LinearLayout>

    <TextView
        android:id="@+id/tvShift"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:layout_weight="0.2"
        android:gravity="left|center"
        android:lines="3"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="10dp"
        android:paddingStart="15dp"
        android:paddingEnd="10dp"
        android:background="@drawable/border_background"
        android:text="Select Shift"
        android:textColor="@android:color/black"
        android:textSize="12sp"
        android:drawableEnd="@drawable/ic_arrow_drop_down_24"/>

    <EditText
        android:id="@+id/edtRemarks"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/border_background"
        android:hint="Remarks"
        android:paddingStart="15dp"
        android:paddingEnd="10dp"
        android:textSize="11.5sp" />
    <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#E2E1E1"></LinearLayout>
</LinearLayout>