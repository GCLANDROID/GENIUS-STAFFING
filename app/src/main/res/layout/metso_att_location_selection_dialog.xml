<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginStart="15dp"
    android:layout_marginEnd="15dp"
    android:background="@color/white"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="34dp"
        android:background="@color/maincolor"
        android:paddingRight="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <TextView
            android:id="@+id/textView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1.8"
            android:gravity="center"
            android:text="Select shift and location"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"></TextView>

        <LinearLayout
            android:id="@+id/lnCancel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:gravity="right"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/imgCancel"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:padding="5dp"
                android:src="@drawable/cancelicon"
                app:tint="@color/white"/>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>


    <Spinner
        android:id="@+id/spShift"
        android:layout_width="match_parent"
        android:layout_height=".01dp"
        android:padding="5dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/tvLocationTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Location"
        android:textStyle="bold"
        android:textSize="13sp"
        android:textColor="@color/colorPrimary"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"/>

    <TextView
        android:id="@+id/txtSelectLocation"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:hint="Select Location"
        android:textSize="13.5sp"
        android:paddingStart="20dp"
        android:paddingTop="10dp"
        android:paddingEnd="8dp"
        android:paddingBottom="10dp"
        android:gravity="center_vertical"
        android:drawableEnd="@drawable/ic_arrow_drop_down_24"
        android:drawableTint="@color/colorPrimary"
        android:background="@drawable/border_background"
        android:layout_marginTop="5dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"/>

    <Spinner
        android:id="@+id/spLocation"
        android:layout_width="match_parent"
        android:layout_height=".01dp"
        android:padding="5dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/txtErrorLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Please select location"
        android:textColor="#F44336"
        android:textSize="12sp"
        android:visibility="gone"
        android:layout_marginTop="5dp"
        android:layout_marginStart="30dp"/>

    <LinearLayout
        android:id="@+id/llApprover"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="visible">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Approver"
            android:textStyle="bold"
            android:textSize="13sp"
            android:textColor="@color/colorPrimary"
            android:layout_marginTop="10dp"
            android:layout_marginStart="20dp"/>

        <!--<TextView
            android:id="@+id/txtApproverName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginStart="20dp"
            android:drawablePadding="5dp"
            android:textColor="@color/black"
            android:drawableStart="@drawable/resize_user_icon"
            android:drawableTint="@color/maincolor"
            android:text="Mr. Sukanto Bhattacherjee"/>-->

        <AutoCompleteTextView
            android:id="@+id/actApproverName"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="15dp"
            android:background="@drawable/border_background"
            android:drawableEnd="@drawable/ic_search_24"
            android:drawablePadding="5dp"
            android:drawableTint="@color/colorPrimary"
            android:gravity="center_vertical"
            android:paddingStart="20dp"
            android:paddingEnd="15dp"
            android:hint="Search Approver"
            android:textSize="13.5sp" />

        <TextView
            android:id="@+id/txtErrorApprover"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Please select Approver"
            android:textColor="#F44336"
            android:textSize="12sp"
            android:visibility="gone"
            android:layout_marginTop="5dp"
            android:layout_marginStart="30dp"/>

    </LinearLayout>



    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnSubmit"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="25dp"
        android:paddingTop="3dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:background="@drawable/buttondesign"
        android:text="Submit"
        android:paddingBottom="2dp"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="14sp"/>
</LinearLayout>